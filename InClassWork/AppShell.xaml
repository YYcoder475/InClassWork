<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InClassWork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InClassWork.Views">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPageView}"
        Route="MainPage" />-->

    <TabBar>
        
        <!-- MainPage -->
        <Tab Icon="home.png">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPageView}"
            Route="MainPage" />
        </Tab>

        <!-- Account -->
        <Tab Icon="account.png">
            <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate local:AccountPageView}"
            Route="AccountPageView" />
        </Tab>

        <!-- Admin Page -->
        <Tab Icon="Admin.png">
            <ShellContent
            Title="Admin"
            ContentTemplate="{DataTemplate local:AdminMainPageView}"
            IsVisible="{Binding IsAdminVisible}"
            Route="AdminPageView" />
        </Tab>

        <Tab Icon="signout.png">
            <ShellContent>
                <Button
                    Margin="15"
                    Command="{Binding SignOut}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            </ShellContent>
            
        </Tab>
    </TabBar>

</Shell>
