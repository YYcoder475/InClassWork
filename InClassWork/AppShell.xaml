<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InClassWork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InClassWork.Views">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPageView}"
        Route="MainPage" />-->

    <FlyoutItem>
        <!-- MainPage -->
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPageView}"
        Route="MainPage" />

        <!-- Admin Page -->
        <ShellContent
        Title="Admin"
        Icon="Admin.png"
        ContentTemplate="{DataTemplate local:AdminMainPageView}"
        Route="AdminPage" />

        <!-- Users List -->
        <ShellContent
        Title="Users List"
        Icon="garden.png"
        ContentTemplate="{DataTemplate local:UsersListView}"
        Route="UsersList" />

    </FlyoutItem>

</Shell>
